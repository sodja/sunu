                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Top des utilisateurs<small>/clients</small></h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                {% for nbrecls in nbrecl %}  
                                    <article class="media event">
                                        <a class="pull-left border-aero profile_thumb">
                                            <i class="fa fa-user aero"></i>
                                        </a>
                                        <div class="media-body">
                                            <a class="title" href="#">{{ nbrecls.username }}</a>
                                            <p>{{ nbrecls.nom }} {{ nbrecls.prenom }} </p>
                                            <p>Nombre de client:{{ nbrecls.nbre }}</p>
                                        </div>
                                    </article>
                                 {% endfor %}    
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
